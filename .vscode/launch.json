    "version": "0.2.0",
    "configurations": [
        
        {
            "name": ".NET Core Unit Test",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-test",
            "program": "${workspaceFolder}/Tests/Unit/bin/Debug/net7.0/UnitTests.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Tests/Unit",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}